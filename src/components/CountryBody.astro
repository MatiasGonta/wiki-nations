---
type CountryIdd = {
    root: string;
    suffixes: string[];
}

type Currency = {
    name: string;
    symbol: string;
}

type Gini = [string, number];

interface Props {
    officialName: string;
    population?: string;
    area: string;
    coordinates: string;
    capital?: string;
    capitalLocation?: string;
    languages?: string[];
    timezones?: string[];
    currencies?: Currency[];
    carSide?: string;
    tld?: string;
    idd?: CountryIdd;
    ccn3?: string;
    cca3?: string;
    cca2?: string;
    postalCodeFormat?: string;
    gini?: Gini[];
}

const {
    officialName,
    population,
    area,
    coordinates,
    capital,
    capitalLocation,
    languages,
    timezones,
    currencies,
    carSide,
    tld,
    idd,
    ccn3,
    cca3,
    cca2,
    postalCodeFormat,
    gini
} = Astro.props;
---

<article class="w-full">
    <ul class="flex flex-col gap-4 h-[320px] overflow-y-auto md:h-[517px] lg:h-[320px]">
        <li>
            <p class="flex flex-col">
                <strong>Official name</strong>
                <span class="ml-4">{officialName}</span>
            </p>
        </li>
        {
            population &&
            <li>
                <p class="flex flex-col">
                    <strong>Population</strong>
                    <span class="ml-4">{population}</span>
                </p>
            </li>
        }
        <li>
            <p class="flex flex-col">
                <strong>Area</strong>
                <span class="ml-4">{area}</span>
            </p>
        </li>
        <li>
            <p class="flex flex-col">
                <strong>Coordinates</strong>
                <span class="ml-4">{coordinates}</span>
            </p>
        </li>
        {	
            capital &&
            <li>
                <p class="flex flex-col">
                    <strong>Capital</strong>
                    <span class="ml-4">{capital}</span>
                    <span class="ml-4">{capitalLocation}</span>
                </p>
            </li>
        }
        {
            languages &&
            <li>
                <strong>Languages</strong>
                <ul class="ml-8 list-disc">
                    {
                        languages.map((lang: string) => (
                            <li>
                                <span>{lang}</span>
                            </li>
                        ))
                    }
                </ul>
            </li>
        }
        {
            timezones &&
            <li>
                <strong>Timezones</strong>
                <ul class="ml-8 list-disc">
                    {
                        timezones.map((tz: string) => (
                            <li>
                                <span>{tz}</span>
                            </li>
                        ))
                    }
                </ul>
            </li>
        }
        {
            currencies &&
            <li>
                <strong>Currencies</strong>
                <ul class="ml-8 list-disc">
                    {
                        currencies.map(({ name, symbol }) => (
                            <li>
                                <p>{name} ({symbol})</p>
                            </li>
                        ))
                    }
                </ul>
            </li>
        }
        {
            carSide && 
            <li>
                <p class="flex flex-col">
                    <strong>Driving side</strong>
                    <span class="ml-4">{carSide}</span>
                </p>
            </li>
        }
        {
            tld && 
            <li>
                <p class="flex flex-col">
                    <strong>Internet TLD</strong>
                    <span class="ml-4">{tld}</span>
                </p>
            </li>
        }
        {
            idd && idd.root && idd.suffixes &&
            <li>
                <p class="flex flex-col">
                    <strong>Calling code</strong>
                    <span class="ml-4">{idd.root + idd.suffixes}</span>
                </p>
            </li>
        }
        {
            ccn3 && cca3 && cca2 &&
            <li>
                <p class="flex flex-col">
                    <strong>ISO code</strong>
                    <span class="ml-4">{ccn3 + '/' + cca3 + '/' + cca2}</span>
                </p>
            </li>
        }
        {
            postalCodeFormat &&
            <li>
                <p class="flex flex-col">
                    <strong>Postal Code format</strong>
                    <span class="ml-4">{postalCodeFormat}</span>
                </p>
            </li>
        }
        {
            gini && gini.length > 0 &&
            <li>
                <strong>Gini</strong>
                <ul class="ml-8 list-disc">
                    {
                        gini.map(([key, value]) => (
                            <li>
                                <span>{key}: {value}</span>
                            </li>
                        ))
                    }
                </ul>
            </li>
        }
    </ul>
</article>

<style>
    ul::-webkit-scrollbar {
      height: 10px;
      width: 10px;
    }
    ul::-webkit-scrollbar-track {
      border-radius: 5px;
      background-color: #ffffff;
      border: 4px solid var(--wiki-nations-bg);
    }
    
    ul::-webkit-scrollbar-track:hover {
      background-color: #ffffff;
    }
    
    ul::-webkit-scrollbar-track:active {
      background-color: #ffffff;
    }
    
    ul::-webkit-scrollbar-thumb {
      border-radius: 5px;
      background-color: #6b7280;
    }
    
    ul::-webkit-scrollbar-thumb:hover {
      background-color: #B8C0C2;
    }
    
    ul::-webkit-scrollbar-thumb:active {
      background-color: #B8C0C2;
    }
</style>